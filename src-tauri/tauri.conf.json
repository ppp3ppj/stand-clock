{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stand-clock",
  "version": "0.1.0",
  "identifier": "com.ppp3ppj.stand-clock",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "StandClock",
        "width": 480,
        "height": 720,
        "resizable": true,
        "center": true,
        "minWidth": 440,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:standclock.db"]
    }
  }
}
